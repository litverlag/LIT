/* function used to correct unwanted status like "leer" or "nein" */
function correct_unwanted_status(){
  $(".status_tag:contains('Leer')").text("kein Status");
  $(".status_tag:contains('Nein')").text("kein Status");
};



/* function used to colorcode deadlines
	 (example: date colored red if date is in the past */
function deadline_colorcode(){
	var deadline_fields = $("div.deadline");
	
	for(i=0;i<deadline_fields.length;i++){
		if (deadline_fields.get(i).innerHTML < moment().format("DD.MM.YYYY")){
			deadline_fields.get(i).style.color = 'red';
		}
	}
};