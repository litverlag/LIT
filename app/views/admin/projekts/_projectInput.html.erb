<% if false %>

<%= form_for @projekt, url: "/admin/projekts/#{params[:id]}#update"  do |f| %>
    <%= f.label :first_name %>:
    <%= f.text_field :druck %><br />
    <%= f.submit %>
<% end %>

<% end %>



<% if not @projekt.id %>    <!-- neues Projekt erstellen -->

    <%= form_for @projekt, url: admin_projekts_path do |projekt_form| %>
        <%= projekt_form.label :druck %>
        <%= projekt_form.text_field :druck %></br></br>

        <%= fields_for :buch, @projekt.buch do |buch_fields| %>
            <%= buch_fields.label :name %>
            <%= buch_fields.text_field :name %>
        <% end %></br></br>

        <%= projekt_form.submit %>
    <% end %>

<% elsif @projekt.id %>     <!-- bestehendes Projekt bearbeiten -->

    <%= form_for @projekt, url: admin_projekt_path(@projekt.id) do |projekt_form| %>
        <%= projekt_form.label :druck %>
        <%= projekt_form.text_field :druck %></br></br>

        <%= fields_for :buch, @projekt.buch do |buch_fields| %>
            <%= buch_fields.label :name %>
            <%= buch_fields.text_field :name %>
        <% end %></br></br>

        <%= projekt_form.submit %>
    <% end %>

<% end %>
