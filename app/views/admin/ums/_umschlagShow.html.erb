<%
   @relevant_attr = [["Name", @projekt.projektname],
                     ["ISBN", @projekt.buch.isbn],
                     ["Öffentlicher Kommentar", @projekt.kommentar_public],
                     ["Private Bemerkungen des Umschlags", @projekt.umschlag_bemerkungen],
                     ["Soll Fertig", @projekt.final_deadline],
                     ["Soll Fertig Umschlag", @projekt.umschlag_deadline],
                     ["Lektor", @projekt.lektor.name],
                     ["Umschlag", @projekt.buch.umschlag_bezeichnung],
                     ["Format",@projekt.buch.format_bezeichnung],
                     ["Rückenstärke", @projekt.buch.rueckenstaerke],
                     ["Seiten", @projekt.buch.seiten],
                     ["Bindung", @projekt.buch.bindung_bezeichnung],
                     ["Bild",@projekt.umschlag_umschlagsbild],
                     ["Klappentext", @projekt.buch.klappentext],
                     ["Sonder", @projekt.kommentar_public]]
%>



<%= status_bar(@projekt,@projekt.statusumschl.status , "Status des Umschlags") %>

<div class="panel">
  <h3><%= @projekt.projektname %> </h3>
  <div class="attributes_table projekt" id="<%= "attributes_table_projekt_#{@projekt.id}" %>">
    <table border="0" cellpadding="0" cellspacing="0">
      <tbody>
      <% @relevant_attr.each do |name, value| %>
          <% if value.nil?%>
              <tr>
                <th><%= name %></th>
                <td> <span class="empty"><%= I18n.t 'empty' %></span></td>
              </tr>
          <% else%>
              <tr>
                <th><%= name %></th>
                <td><%= value %></td>
              </tr>
          <%end %>
      <%end%>

      </tbody></table>
  </div>
</div>
</div>


