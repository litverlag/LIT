<%= status_bar(@projekt, @projekt.statustitelei.status, "Titlei Status") %>


<% used_url = admin_tit_path(@projekt.id)%>
    <fieldset class="projekt"><legend><span><%= "#{@projekt.projektname} bearbeiten"%></span></legend>
      <ul>
        <%= form_for @projekt, url: used_url, remote: true do |projekt_form| %>
            <li>
              <%= projekt_form.label :projektname, "Projektname" %>
              <%= "#{@projekt.projektname}" %>
            </li>
            <li>
              <%= projekt_form.label :projektname, "Betreuender Lektor" %>
              <%= "#{@projekt.lektor.fullname}" %>
            </li>
            <li>
              <%= status_changer("Status der Titelei", "status[statustitelei]", $TITELEI_STATUS) %>
            </li>
            <%= projekt_form.submit "#{@projekt.projektname} bearbeiten" %>
        <% end %>
      </ul>
    </fieldset>







