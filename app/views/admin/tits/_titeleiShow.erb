
<% @relevant_attr = @projekt
    .attributes
    .to_h
    .slice(*["projektname","projekt_email_adresse", "final_deadline", "titelei_deadline","titlei_letzte_korrektur","datum_an_dem_freigabe_erhalten", "erscheinungsjahr","titelei_bemerkungen"])

    names = ["Projektname", "Projektemailadresse" ,"Soll Fertig Final", "Soll Fertig Titelei", "Korrektur", "Freigabe erhalten am","Erscheinungsjahr","Bemerkungen" ,"Ersch" ]
   @relevant_attr = change_names_in_hash(@relevant_attr,names)
%>


<!--ISBN-->
"zum Druck Datum"


<%= status_bar(@projekt, @projekt.statustitelei.status, "Titlei Status") %>

<div class="panel">
  <h3><%= @projekt.projektname %> </h3>
  <div class="attributes_table projekt" id="<%= "attributes_table_projekt_#{@projekt.id}" %>">
    <table border="0" cellpadding="0" cellspacing="0">
      <tbody>
      <% @relevant_attr.each_pair do |name, value| %>
          <% if value.nil?%>
              <tr>
                <th><%= name %></th>
                <td> <span class="empty">Leer</span></td>
              </tr>
          <% else%>
              <tr>
                <th><%= name %></th>
                <td><%= value %></td>
              </tr>
          <%end %>
      <%end%>
      </tbody></table>
  </div>
</div>
</div>







