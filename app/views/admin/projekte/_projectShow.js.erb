<% if js_action = "autor_add" %>
$(".flashes").replaceWith('<div class="flashes"> <div class="flash flash_notice">Autor erfolgreich erstellt und mit Projekt verknüpft</div></div>').delay(200).fadeOut(200);
<%end%>
<% if js_action = "autor_new" %>
$(".flashes").replaceWith('<div class="flashes"> <div class="flash flash_notice">Autor erfolgreich verknüpft</div></div>');
<%end%>
<% if js_action = "project_changed" %>
$(".flashes").replaceWith('<div class="flashes"> <div class="flash flash_notice">Projekt erfolgreich überarbeitet</div></div>');
$(".flashes").delay(2000).fadeOut(500);
<%end%>


