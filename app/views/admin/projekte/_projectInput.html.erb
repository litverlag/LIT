
<% #If abfrage um zwischen der create und update View zu unterscheiden %>
<% if not @projekt.id%>
    <% used_url = admin_projekte_path%>
    <fieldset class="projekt"><legend><span>Ein neues Projekt erstellen</span></legend>
      <p>In diesem Bereich können Sie Projekte erstellen, dazu geben Sie dem Projekt vorerst nur einen die folgenden </p>
      <ul>

        <%= form_for @projekt, url: used_url do |projekt_form| %>
            <li>
              <%= projekt_form.label :projektname, "Name des Projektes" %>
              <%= projekt_form.text_field :projektname %>
            </li>
            <li>
              <%= projekt_form.label :projekt_email_adresse, "Email des Projektes" %>
              <%= projekt_form.text_field :projekt_email_adresse %>
            </li>
            <li>
              <%= projekt_form.label :lektor_bemerkungen_private, "Private Bemerkungen zu diesem Projekt" %>
              <%= projekt_form.text_area :lektor_bemerkungen_private, size: "10x10" %>
            </li>
            <%= projekt_form.submit %>
        <% end %>

      </ul>
    </fieldset>

<% elsif @projekt.id %>
    <% used_url = admin_projekt_path(@projekt.id)%>



    <nav>
      <ul>
        <li onclick='$(".buch").hide();$(".autor").hide();$(".projekt").show()'>Projekt</li>
        <li onclick='$(".buch").show();$(".autor").hide();$(".projekt").hide()'>Buch</li>
        <li onclick='$(".buch").hide();$(".autor").show();$(".projekt").hide()'>Autor</li>
      </ul>
    </nav>

    <fieldset class="projekt"><legend><span><%= "#{@projekt.projektname} bearbeiten"%></span></legend>
      <ul>
        <%= form_for @projekt, url: used_url do |projekt_form| %>
            <li>
              <%= projekt_form.label :projektname, "Projektname" %>
              <%= "#{@projekt.projektname}" %>
            </li>
            <li>
              <%= projekt_form.label :projekt_email_adresse, "Email des Projektes" %>
              <%= projekt_form.text_field :projekt_email_adresse %>
            </li>
            <li>
              <%= projekt_form.label :lektor_bemerkungen_private, "Private Bemerkungen zu diesem Projekt" %>
              <%= projekt_form.text_area :lektor_bemerkungen_private, size: "10x10" %>
            </li>
            <li>
              <%= projekt_form.label :final_deadline, "Finale Deadline für das gesamte Projekt" %>
              <input class="datepicker" data-date-format="mm/dd/yyyy" name="projekt[final_deadline]" value="<%="#{@projekt.final_deadline}" %>">
            </li>
            <%= projekt_form.submit "#{@projekt.projektname} bearbeiten" %>
        <% end %>
      </ul>
    </fieldset>

    <fieldset class="buch"><legend><span><%= "Buch zu #{@projekt.projektname} bearbeiten"%></span></legend>
      <ul>
        <%= form_for @projekt, url: used_url do |projekt_form| %>
            <%= fields_for :buch, @projekt.buch do |buch_fields| %>
                <li>
                  <%= buch_fields.label :name, "Name"%>
                  <%= buch_fields.text_field :name %>
                </li><li>
                    <%= buch_fields.label :titel1, "Titel 1 "%>
                    <%= buch_fields.text_field :titel1 %>
                </li> <li>
                    <%= buch_fields.label :titel2, "Titel 2 "%>
                    <%= buch_fields.text_field :titel2 %>
                </li><li>
                   <%= buch_fields.label :titel3, "Titel 3"%>
                    <%= buch_fields.text_field :titel3 %>
                 </li><li>
                  <%= buch_fields.label :isbn, "ISBN "%>
                  <%= buch_fields.text_field :isbn %>
                </li><li>
                  <%= buch_fields.label :issn, "ISSN"%>
                  <%= buch_fields.text_field :issn%>
                </li><li>
                  <%= buch_fields.label :utitel1, "Untertitel 1"%>
                  <%= buch_fields.text_field :utitel1 %>
                </li>  <li>
                  <%= buch_fields.label :utitel2, "Untertitel 2"%>
                  <%= buch_fields.text_field :utitel2 %>
                </li><li>
                  <%= buch_fields.label :utitel3, "Untertitel 3"%>
                  <%= buch_fields.text_field :utitel3 %>
                </li><li>
                  <%= buch_fields.label :seiten, "Seitenanzahl"%>
                  <%= buch_fields.text_field :seiten %>
                </li><li>
                  <%= buch_fields.label :preis, "Preis in €"%>
                  <%= buch_fields.text_field :preis %>
                </li><li>
                  <%= buch_fields.label :spreis, "Sparpreis in €"%>
                  <%= buch_fields.text_field :spreis %>
                </li>  <li>
                  <%= buch_fields.label :gewicht, "Gewicht in g"%>
                  <%= buch_fields.text_field :gewicht %>
                </li><li>
                  <%= buch_fields.label :volumen, "Volumen in l"%>
                  <%= buch_fields.text_field :volumen%>
                </li><li class="one_size_42px">
                  <%= buch_fields.label :sammelband, "Ist Sammelband"%>
                    <%= buch_fields.check_box :sammelband%>
                </li><li>
                  <%= buch_fields.label :erscheinungsjahr, "Erscheinungsjahr"%>
                  <input class="datepicker" data-date-format="mm/dd/yyyy" name="buch[erscheinungsjahr]" value="<%="#{@projekt.buch.erscheinungsjahr}" %>">
                </li>
            <% end %>
            <%= projekt_form.submit "Buchinformationen bearbeiten" %>
        <% end %>
      </ul>
    </fieldset>








    <fieldset class="autor"><legend><span><%= "Autor zu #{@projekt.projektname} bearbeiten"%></span></legend>
          <p>Erstellen sie einen neuen Autor oder fügen sie einen schon bestehenden Autor zu der Datenbank hinzu.</p>
          <nav>
            <ul>
              <li id="new_autor" >Alle Attribute</li>
            </ul>
          </nav>
          <ul>
            <%= form_for @projekt, url: used_url do |projekt_form| %>
                <%= fields_for :autor, @projekt.autor do |buch_fields| %>
                    <li>
                      <%= buch_fields.label :name, "Nachname"%>
                      <%= buch_fields.text_field :name, id: 'name_autocomplete' %>
                    </li>
                <% end %>
                <%= projekt_form.submit "Autor hinzufügen" %>
            <% end %>
          </ul>
      <%= content_tag :div, class: "temp_information", data: {temp: @projekt.autor} do %>
      <% end %>




        </fieldset>









<% end %>



