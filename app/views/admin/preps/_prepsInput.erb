<%= status_bar(@projekt, @projekt.statuspreps.status, "Preps Status") %>


<% used_url = admin_preps_path(@projekt.id)%>
<fieldset class="projekt"><legend><span><%= "#{@projekt.projektname} bearbeiten"%></span></legend>
  <ul>
    <%= form_for @projekt, url: used_url, remote: true do |projekt_form| %>
        <li>
          <%= projekt_form.label :projektname, "Projektname" %>
          <%= "#{@projekt.projektname}" %>
        </li>
        <li>
          <%= projekt_form.label :lektor_name, "Betreuender Lektor" %>
          <%= "#{@projekt.lektor.fullname}" %>
        </li>
        <li>
          <%= status_changer("Status der Preps", "status[statuspreps]", $PREPS_STATUS) %>
        </li>
        <li>
          <%= projekt_form.label preps_bemerkungen, "Private Bemerkungen der Preps" %>
          <%= projekt_form.text_area :preps_bemerkungen, size: "10x10" %>
        </li>
        <li>
          <%= projekt_form.label :binderei_bemerkungen, "Ã–ffentliche Bemerkungen" %>
          <%= projekt_form.text_area :kommentar_public , size: "10x10"  %>
        </li>

        <%= projekt_form.submit "#{@projekt.projektname} bearbeiten" %>
    <% end %>
  </ul>
</fieldset>







