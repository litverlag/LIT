<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => "form-signin"}) do |f| %>
    <h2 class="form-signin-heading">Bitte einloggen</h2>
      <label for="inputEmail" class="sr-only">Email Adresse</label>
      <%= f.email_field :email, autofocus: true, required: true, class: "form-control", id: "inputEmail", placeholder: "Email Adresse" %>
      <label for="inputPassword" class="sr-only">Passwort</label>
      <%= f.password_field :password, autocomplete: "off", id: "inputPassword", class: "form-control", placeholder: "Passwort", required: true %>
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %>  Eingeloggt bleiben
        </label>
      </div>
      <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block" %>
  <% end %>
</div>
